{
    "builders": [
        {
            "http_directory": "files",
            "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
            "source_path": "packer_cache/coreos_production_virtualbox.ovf",
	    "output_directory": "files/output",
            "ssh_username": "core",
            "ssh_password": "core",
	    "headless": "true",
            "type": "virtualbox-ovf",
            "vboxmanage": [
                [
                    "storageattach",
                    "{{.Name}}",
                    "--storagectl",
                    "IDE Controller",
                    "--port",
                    "1",
                    "--device",
                    "0",
                    "--type",
                    "dvddrive",
                    "--medium",
                    "./files/configdrive.iso"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "1024"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "1"
                ]
            ]
        }
    ]
}
