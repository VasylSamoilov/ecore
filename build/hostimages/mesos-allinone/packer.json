{
    "builders": [
        {
            "headless": "true",
            "http_directory": "files",
            "output_directory": "files/output",
            "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
            "source_path": "packer_cache/coreos_production_virtualbox.ovf",
            "ssh_password": "core",
            "ssh_username": "core",
            "type": "virtualbox-ovf",
            "vboxmanage": [
                [
                    "storageattach",
                    "{{.Name}}",
                    "--storagectl",
                    "IDE Controller",
                    "--port",
                    "1",
                    "--device",
                    "0",
                    "--type",
                    "dvddrive",
                    "--medium",
                    "./files/configdrive.iso"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "1024"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "1"
                ]
            ]
        }
    ],
    "post-processors": [
        {
            "output": "./files/coreos.box",
            "type": "vagrant",
	    "include": ["./files/vagrant/base_mac.rb", "./files/vagrant/change_host_name.rb","./files/vagrant/configure_networks.rb"],
            "vagrantfile_template": "./files/vagrant/Vagrantfile"
        }
    ]
}
