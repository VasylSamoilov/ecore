#cloud-config

---
coreos:
  units:
  - name: zookeeper.service
    command: start
    content: |
      [Unit]
      Description=Core Zookeeper service
      Author=Oleksii Dzhulai
      After=docker.service
      Before=mesos-master.service

      [Service]
      Restart=always
      ExecStartPre=-/usr/bin/docker rm zookeeper
      ExecStart=/usr/bin/docker run -e MYID=1 --name=zookeeper -p 2181:2181 -p 2888:2888 -p 3888:3888 mesoscloud/zookeeper:3.4.6-ubuntu-14.04
      ExecStop=/usr/bin/docker stop -t 2 zookeeper
  - name: mesos-master.service
    command: start
    content: |
      [Unit]
      Description=Mesos master service
      Author=Oleksii Dzhulai
      After=zookeeper.service

      [Service]
      Restart=always
      ExecStartPre=-/usr/bin/docker rm mesos-master
      ExecStart=/usr/bin/docker run --net=host -e MESOS_HOSTNAME=$public_ipv4 -e MESOS_IP=$public_ipv4 -e MESOS_QUORUM=1 -e MESOS_ZK=zk://$private_ipv4:2181/mesos --name mesos-master -p 5050:5050 mesoscloud/mesos-master:0.24.1-ubuntu-14.04
      ExecStop=/usr/bin/docker stop -t 2 mesos-master
  - name: marathon.service
    command: start
    content: |
      [Unit]
      Description=Marathon service
      Author=Oleksii Dzhulai
      After=mesos-master.service zookeeper.service

      [Service]
      Restart=always
      ExecStartPre=-/usr/bin/docker rm marathon
      ExecStart=/usr/bin/docker run --net=host -e LIBPROCESS_IP=$public_ipv4 -e MARATHON_HOSTNAME=$public_ipv4 -e MARATHON_HTTPS_ADDRESS=$public_ipv4 -e MARATHON_HTTP_ADDRESS=$public_ipv4 -e MARATHON_MASTER=zk://$private_ipv4:2181/mesos -e MARATHON_ZK=zk://$private_ipv4:2181/marathon --name marathon mesoscloud/marathon:0.11.0-ubuntu-15.04
      ExecStop=/usr/bin/docker stop -t 2 marathon
  - name: mesos-slave.service
    command: start
    content: |
      [Unit]
      Description=Mesos slave service
      Author=Oleksii Dzhulai
      After=zookeeper.service mesos-master.service

      [Service]
      Restart=always
      ExecStartPre=-/usr/bin/docker rm mesos-slave
      ExecStart=/usr/bin/docker run --privileged --net=host -e LIBPROCESS_IP=$public_ipv4 -e MESOS_HOSTNAME=$public_ipv4 -e MESOS_IP=$public_ipv4 -e MESOS_MASTER=zk://$private_ipv4:2181/mesos -v /sys/fs/cgroup:/sys/fs/cgroup -v /var/run/docker.sock:/var/run/docker.sock --name mesos-slave -p 5050:5050 mesoscloud/mesos-slave:0.24.1-ubuntu-14.04
      ExecStop=/usr/bin/docker stop -t 2 mesos-master
write_files:
- path: /etc/systemd/coredump.conf
  permissions: '0644'
  owner: root
  content: |
    [Coredump]
    Storage=none
manage_etc_hosts: localhost
