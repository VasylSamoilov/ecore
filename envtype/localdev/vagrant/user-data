#cloud-config

---
coreos:
  units:
  - name: etcd2.service
    command: start
  - name: zookeeper.service
    command: start
    content: |
      [Unit]
      Description=Core Zookeeper service
      Author=Oleksii Dzhulai
      After=docker.service
      Requires=docker.service

      [Service]
      Restart=always
      ExecStartPre=-/usr/bin/docker rm zookeeper
      ExecStart=/usr/bin/docker run -e MYID=1 --name=zookeeper -p 2181:2181 -p 2888:2888 -p 3888:3888 mesoscloud/zookeeper:3.4.6-ubuntu-14.04
      ExecStop=/usr/bin/docker stop -t 2 zookeeper
  - name: mesos-master.service
    command: start
    content: |
      [Unit]
      Description=Mesos master service
      Author=Oleksii Dzhulai
      After=zookeeper.service
      Requires=zookeeper.service

      [Service]
      Restart=always
      ExecStartPre=-/usr/bin/docker rm mesos-master
      ExecStart=/usr/bin/docker run --net=host -e MESOS_HOSTNAME=$public_ipv4 -e MESOS_IP=$public_ipv4 -e MESOS_QUORUM=1 -e MESOS_ZK=zk://$private_ipv4:2181/mesos --name mesos-master -p 5050:5050 mesoscloud/mesos-master:0.24.1-ubuntu-14.04
      ExecStop=/usr/bin/docker stop -t 2 mesos-master
  - name: marathon.service
    command: start
    content: |
      [Unit]
      Description=Marathon service
      Author=Oleksii Dzhulai
      After=mesos-master.service
      Requires=mesos-master.service

      [Service]
      Restart=always
      ExecStartPre=-/usr/bin/docker rm marathon
      ExecStart=/usr/bin/docker run --net=host -e LIBPROCESS_IP=172.17.8.101 -e MARATHON_HOSTNAME=$public_ipv4 -e MARATHON_HTTPS_ADDRESS=$public_ipv4 -e MARATHON_HTTP_ADDRESS=$public_ipv4 -e MARATHON_MASTER=zk://$private_ipv4:2181/mesos -e MARATHON_ZK=zk://$private_ipv4:2181/marathon --name marathon mesoscloud/marathon:0.11.0-ubuntu-15.04
      ExecStop=/usr/bin/docker stop -t 2 marathon
  etcd2:
    discovery: https://discovery.etcd.io/4f8202f40358eed50b70fd25bb54a032
    advertise-client-urls: http://$public_ipv4:2379
    initial-advertise-peer-urls: http://$private_ipv4:2380
    listen-client-urls: http://0.0.0.0:2379,http://0.0.0.0:4001
    listen-peer-urls: http://$private_ipv4:2380,http://$private_ipv4:7001
